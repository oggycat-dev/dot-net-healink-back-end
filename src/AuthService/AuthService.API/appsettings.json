{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionConfig": {
    "DefaultConnection": "Host=localhost;Database=authservicedb;Username=productauth;Password=ProductAuth@123",
    "RetryOnFailure": true,
    "MaxRetryCount": 3,
    "MaxRetryDelay": 30,
    "ErrorNumbersToAdd": []
  },
  "JwtConfig": {
    "Key": "ProductAuthMicroserviceSecretKeyIsLongEnoughToBeUsedWithJWT",
    "Issuer": "ProductAuthMicroservice",
    "Audience": "ProductAuthMicroservice.Users",
    "ExpireInMinutes": 60,
    "RefreshTokenExpireInDays": 7,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true,
    "ClockSkewMinutes": 5
  },

  "DefaultAdminAccount": {
    "Email": "admin@productauth.com",
    "Password": "Admin@123"
  },

  "CorsConfig": {
    "PolicyName": "DefaultCors",
    "AllowAnyOrigin": true,
    "AllowAnyMethod": true,
    "AllowAnyHeader": true,
    "AllowCredentials": true,
    "AllowedOrigins": "localhost3000, localhost3001, localhost:5173, localhost:4200",
    "AllowedMethods": "*",
    "AllowedHeaders": "*",
    "ExposedHeaders": "Content-Disposition, Token-Expired",
    "PreflightMaxAgeSeconds": 600
  },
  "DataConfig": {
    "EnableSeeding": true,
    "EnableAutoApplyMigrations": true
  },
  "RabbitMQ": {
    "HostName": "localhost",
    "Port": 5672,
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "ExchangeName": "product_auth_exchange",
    "QueueName": "authservice_queue",
    "Durable": true,
    "AutoDelete": false,
    "RetryCount": 3,
    "RetryDelaySeconds": 5,
    "AutoAck": false,
    "PrefetchCount": 10,
    "ConnectionTimeoutSeconds": 30,
    "HeartbeatIntervalSeconds": 60,
    "UseSsl": false,
    "SslServerName": ""
  },
  "Cache": {
    "UserStateCacheMinutes": 30,
    "UserStateSlidingMinutes": 15,
    "ActiveUsersListHours": 24,
    "CleanupIntervalMinutes": 60,
    "MaxCacheSize": 10000
  },
  "OutboxProcessor": {
    "ProcessingIntervalSeconds": 30,
    "BatchSize": 50,
    "MaxRetryAttempts": 5,
    "Enabled": true,
    "ProcessingTimeoutSeconds": 300,
    "EnableRetryWithBackoff": true
  }
}
