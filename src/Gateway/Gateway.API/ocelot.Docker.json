{
  "Routes": [
    // AuthService Routes
    {
      "DownstreamPathTemplate": "/api/auth/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "authservice-api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/auth/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "RouteClaimsRequirement": {},
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },
    
    // ProductService Routes - Products
    {
      "DownstreamPathTemplate": "/api/products/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "productservice-api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/products/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "RouteClaimsRequirement": {},
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },
    
    // ProductService Routes - Categories
    {
      "DownstreamPathTemplate": "/api/categories/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "productservice-api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/categories/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "RouteClaimsRequirement": {},
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },
    
    // Health Check Routes
    {
      "DownstreamPathTemplate": "/health",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "authservice-api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/health/auth",
      "UpstreamHttpMethod": [ "GET" ]
    },
    {
      "DownstreamPathTemplate": "/health",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "productservice-api",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/health/products",
      "UpstreamHttpMethod": [ "GET" ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://gateway-api",
    "RequestIdKey": "OcRequestId",
    "AdministrationPath": "/administration"
  },
  "SwaggerEndPoints": [
    {
      "Key": "AuthService",
      "Config": [
        {
          "Name": "Auth API",
          "Version": "v1",
          "Url": "http://authservice-api/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "ProductService", 
      "Config": [
        {
          "Name": "Product API",
          "Version": "v1",
          "Url": "http://productservice-api/swagger/v1/swagger.json"
        }
      ]
    }
  ]
}
