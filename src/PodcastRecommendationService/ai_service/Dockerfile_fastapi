# üê≥ DOCKERFILE CHO FASTAPI PODCAST RECOMMENDATION SERVICE
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies (minimal)
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements_fastapi.txt requirements.txt

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Force cache bust for application code
ARG CACHEBUST=1
RUN echo "Cache bust: $CACHEBUST"

# Copy application code
COPY fastapi_service.py ./

# Create models directory
RUN mkdir -p ./models

# Copy model files if they exist (ƒë∆∞·ª£c mount t·ª´ host)
# COPY models/ ./models/

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run application v·ªõi uvicorn
CMD ["uvicorn", "fastapi_service:app", "--host", "0.0.0.0", "--port", "8000"]