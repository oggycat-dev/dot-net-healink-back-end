# Sử dụng file này để thiết lập biến môi trường cho development
# Copy file này thành .env và điền thông tin thực tế

# Database Configuration - PostgreSQL Single Instance
DB_HOST=localhost
DB_PORT=5432
AUTH_DB_NAME=authservicedb
PRODUCT_DB_NAME=productservicedb
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# JWT Configuration (CRITICAL: Must be same across all services)
JWT_SECRET_KEY=your_jwt_secret_key_must_be_at_least_32_characters_long
JWT_ISSUER=ProductAuthMicroservice
JWT_AUDIENCE=ProductAuthMicroservice.Users
JWT_EXPIRE_MINUTES=60

# Redis Configuration - Distributed Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# RabbitMQ Configuration - Message Broker
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=your_rabbitmq_user
RABBITMQ_PASSWORD=your_rabbitmq_password
RABBITMQ_VHOST=/
RABBITMQ_EXCHANGE=product_auth_exchange

# Admin Account - Default System Admin
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your_admin_password

# Service URLs
AUTH_SERVICE_URL=http://localhost:5001
PRODUCT_SERVICE_URL=http://localhost:5002
GATEWAY_URL=http://localhost:5000

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,http://localhost:3000

# Docker Environment
COMPOSE_PROJECT_NAME=productauth-microservices
DOCKER_REGISTRY=your-registry.com
IMAGE_TAG=latest

# SSL/TLS (for production)
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Logging
LOG_LEVEL=Information
LOG_PATH=/app/logs